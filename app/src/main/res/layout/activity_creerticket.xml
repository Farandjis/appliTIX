<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creerticket">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#673AB7"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Créer un ticket"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/llct2"
        android:layout_width="346dp"
        android:layout_height="352dp"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <Spinner
            android:id="@+id/ct_selecttitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/ct_selectur"
                android:layout_width="131dp"
                android:layout_height="64dp" />


            <Spinner
                android:id="@+id/ct_selectdesmotscles"
                android:layout_width="215dp"
                android:layout_height="69dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:ems="10"
            android:inputType="text"
            android:text="Expliquez ici votre problème" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCreerTicket2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llct2"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>

